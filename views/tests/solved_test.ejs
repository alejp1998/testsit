<div id="usercontent" class="content">

    <div class="box">
      <div class="columns">
        <div class="column">
          <p class="title is-2">Test Id: <%=test.testid%></p>
          <p class="subtitle is-4">Descripción: <%=test.desc%></p>
        </div>
        <div class="column is-narrow">
          <canvas id="chart-<%=test.testid%>" width="100" height="100"></canvas>
        </div>
        <div class="column is-narrow">
          <a href="/tests/<%=subject%>"><%=subject%></a>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <p class="subtitle is-6">Veces intentado: <%=test.nTries%></p>
        </div>
        <div class="column is-narrow">
          <span class="tag has-text-white has-background-primary is-large">SOLUCIÓN</span>
        </div>
      </div>
    </div>

    <script>
        var ctx = document.getElementById('chart-<%=test.testid%>').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Aciertos', 'Fallos', 'Omitidas'],
                datasets: [{
                    data: [<%=test.hits%>, <%=test.fails%>, <%=test.omissions%>],
                    backgroundColor: [
                        'hsl(141, 53%, 53%)',
                        'hsl(348, 100%, 61%)',
                        'hsl(0, 0%, 71%)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                legend: false,
            }
        });
    </script>

    <div class="columns">
        <div class="column">

              <% for (var i in test.quizzes) { %>
                  <% var quiz = test.quizzes[i]; %>
                  <% var n = Number(i) + 1; %>

                  <div class="box">
                      <p class="subtitle is-5"><span class="tag has-text-white has-background-info is-small"><%=n%></span>  <%=quiz.question%></p>
                      <div class="columns">
                        <div class="column">
                          <ul>
                              <% if(quiz.answer1){ %>
                                <% if(Number(quiz.answer) === 1){ %>
                                  <li>
                                    <p class="subtitle is-5"><b>A.  <%=quiz.answer1%></b></p>
                                  </li>
                                <% }else{ %>
                                  <li>
                                    <p class="subtitle is-6">A.  <%=quiz.answer1%></p>
                                  </li>
                                <% } %>
                              <% } %>
                              <% if(quiz.answer2){ %>
                                <% if(Number(quiz.answer) === 2){ %>
                                  <li>
                                    <p class="subtitle is-5"><b>B.  <%=quiz.answer2%></b></p>
                                  </li>
                                <% }else{ %>
                                  <li>
                                    <p class="subtitle is-6">B.  <%=quiz.answer2%></p>
                                  </li>
                                <% } %>
                              <% } %>
                              <% if(quiz.answer3){ %>
                                <% if(Number(quiz.answer) === 3){ %>
                                  <li>
                                    <p class="subtitle is-5"><b>C.  <%=quiz.answer3%></b></p>
                                  </li>
                                <% }else{ %>
                                  <li>
                                    <p class="subtitle is-6">C.  <%=quiz.answer3%></p>
                                  </li>
                                <% } %>
                              <% } %>
                              <% if(quiz.answer4){ %>
                                <% if(Number(quiz.answer) === 4){ %>
                                  <li>
                                    <p class="subtitle is-5"><b>D.  <%=quiz.answer4%></b></p>
                                  </li>
                                <% }else{ %>
                                  <li>
                                    <p class="subtitle is-6">D.  <%=quiz.answer4%></p>
                                  </li>
                                <% } %>
                              <% } %>
                              <% if(quiz.answer5){ %>
                                <% if(Number(quiz.answer) === 5){ %>
                                  <li>
                                    <p class="subtitle is-5"><b>E.  <%=quiz.answer5%></b></p>
                                  </li>
                                <% }else{ %>
                                  <li>
                                    <p class="subtitle is-6">E.  <%=quiz.answer5%></p>
                                  </li>
                                <% } %>
                              <% } %>
                              <% if(quiz.answer6){ %>
                                <% if(Number(quiz.answer) === 6){ %>
                                  <li>
                                    <p class="subtitle is-5"><b>F.  <%=quiz.answer6%></b></p>
                                  </li>
                                <% }else{ %>
                                  <li>
                                    <p class="subtitle is-6">F.  <%=quiz.answer6%></p>
                                  </li>
                                <% } %>
                              <% } %>
                          </ul>
                        </div>
                        <div class="column is-narrow">
                          <canvas id="chart1-<%=quiz.id%>" width="100" height="100"></canvas>
                        </div>
                        <div class="column is-narrow">
                          <canvas id="chart2-<%=quiz.id%>" width="100" height="100"></canvas>
                        </div>
                      </div>
                  </div>

                  <script>
                      var ctx1 = document.getElementById('chart1-<%=quiz.id%>').getContext('2d');
                      var myChart1 = new Chart(ctx1, {
                          type: 'doughnut',
                          data: {
                              labels: ['A', 'B', 'C', 'D', 'E', 'F'],
                              datasets: [{
                                  data: [<%=quiz.n1%>, <%=quiz.n2%>, <%=quiz.n3%>,
                                        <%=quiz.n4%>, <%=quiz.n5%>, <%=quiz.n6%>],
                                  backgroundColor: [
                                    '#1f77b4','#ff7f0e','#2ca02c',
                                    '#d62728','#9467bd','#8c564b'
                                  ]
                              }]
                          },
                          options: {
                              legend: false,
                          }
                      });

                      var ctx2 = document.getElementById('chart2-<%=quiz.id%>').getContext('2d');
                      var myChart2 = new Chart(ctx2, {
                          type: 'doughnut',
                          data: {
                              labels: ['Aciertos', 'Fallos', 'Omitidas'],
                              datasets: [{
                                  data: [<%=quiz.hits%>, <%=quiz.fails%>, <%=quiz.omissions%>],
                                  backgroundColor: [
                                      'hsl(141, 53%, 53%)',
                                      'hsl(348, 100%, 61%)',
                                      'hsl(0, 0%, 71%)'
                                  ],
                                  borderWidth: 1
                              }]
                          },
                          options: {
                              legend: false,
                          }
                      });
                  </script>

            <% } %>

            <a href="/tests/<%=subject%>" class="button is-info">Volver</a>
            <a href="/tests/<%=subject%>/<%=test.testid%>" class="button is-warning has-text-black">Intentar</a>
        </div>
    </div>
</div>
