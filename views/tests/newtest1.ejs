<div class="content">

    <form method="post" action="/newtest/<%=subject%>/">
        
    <div class="columns">
        <div class="column">
            <h2 class="subtitle is-2">Nuevo Test de <%=subject%></h2>
        </div>
        <div class="column is-narrow">
            <input type="submit" class="button is-success is-large" value="Siguiente">
        </div>
        
    </div>

    <ul>

    <li>
        <span class="tag is-dark is-medium">Test Id: (asignatura-mes-año-número)</span>
        <input type="text" value="<%=subject%>-01-2019-1" class="input is-primary" name="testid" autocomplete="off">
    </li>

    <li>
        <span class="tag is-dark is-medium">Año:</span>
        <input type="text" value="2019" class="input is-primary" name="year" autocomplete="off">
    </li>

    <li>
        <span class="tag is-dark is-medium">Mes:</span>
        <input type="text" value="1" class="input is-primary" name="month" autocomplete="off">
    </li>
    
    <li>
        <span class="tag is-dark is-medium">Descripción:</span>
        <input type="text" value="" placeholder="Primer Parcial o algo por el estilo" class="input is-primary" name="desc" autocomplete="off">
    </li>

    <li>
        <span class="tag is-dark is-medium">Número de preguntas:</span>
        <input type="text" value="" placeholder="Número de preguntas que tiene el test" class="input is-primary" name="npreg" autocomplete="off">
    </li>
    </ul>
    
    </form>
  
  </div>